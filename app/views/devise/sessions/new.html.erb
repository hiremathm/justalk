 <div class="login-page">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "off", class: "form-control input-sm"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password",autocomplete: "off", class: "font-weight-normal form-control input-group input-sm"  %>
  </div>
  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-success submit"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


