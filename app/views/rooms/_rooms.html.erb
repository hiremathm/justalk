<div class="chat-room">
  <div class="mb-3">
    <div id="new_form">
      <%= link_to new_room_path , class: "btn btn-success",remote: true do %>
        <b>NewChat</b>
      <%end%>
    </div>
  </div>
  <div class="all-rooms">
    <table class="table table-hover table-striped">
      <%if @rooms.present?%>
        <tbody>
          <%@rooms.each do |room|%>
            <tr class="room">
              <td>
              <%= link_to room_path(room), style: "text-decoration: none;" do %>
                <img src="https://gravatar.com/avatar/cb86d4776fd81deb8e32db8b9e2eb33a.png" width="30px" height="30px">
                <%= room.name%>
              <%end%>
              </td>
            </tr>
          <%end%>
        </tbody>
      <%else%>        
          <tr><td>There are no rooms</td></tr>
      <%end%>
    </table>
  </div>
</div>


<style type="text/css">
  .all-rooms {
  height: 500px;
  width: 100%;
  margin-left: 3%;
}
#new_form {
  width: 95em;
  padding-left: 3%;
}

.all-rooms {
  overflow-y: scroll;
}
</style>